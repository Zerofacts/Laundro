<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <DatePicker
            android:id="@+id/reminderDP">
            <!--Finish date picker-->
        </DatePicker>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/reminderTV"
            android:text="@string/reminderLabel"/>

        <EditText
            android:id="@+id/reminderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="bedsheets"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/setRemiderButton"
            android:text="@string/setReminderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

</TableLayout>